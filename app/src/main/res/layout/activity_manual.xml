<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManualActivity"
    android:background="@drawable/henesis">

    <ImageView
        android:id="@+id/iv_spor_manual"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="180dp"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/spor_move" />

    <ImageView
        android:id="@+id/iv_mush_sample"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop = "180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mush_move" />

    <ImageView
        android:id="@+id/iv_zomb_sample"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/zomb_move" />

    <TextView
        android:id="@+id/tv_manual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#cc3300"
        android:fontFamily="@font/maple_bold"
        android:textSize="25dp"
        android:text="@string/manual"
        android:padding="30dp"
        android:background="@drawable/back_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/start_btn_toMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/back_radius"
        android:textColor="#cc3300"
        android:fontFamily="@font/maple_bold"
        android:textSize="25dp"
        android:padding="30dp"
        android:text="시작하기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_manual" />
</androidx.constraintlayout.widget.ConstraintLayout>